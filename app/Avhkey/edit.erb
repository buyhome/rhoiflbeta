<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @avhkey.name %></h1>
    <a href="<%= url_for :action => :show, :id => @avhkey.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @avhkey.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @avhkey.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="avhkey[name]" class="fieldLabel">Name</label>
            <input type="text" id="avhkey[name]" name="avhkey[name]" value="<%= @avhkey.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="avhkey[fltno]" class="fieldLabel">Fltno</label>
            <input type="text" id="avhkey[fltno]" name="avhkey[fltno]" value="<%= @avhkey.fltno %>" <%= placeholder( "Fltno" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
