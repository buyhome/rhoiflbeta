<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @flt.number %></h1>
    <a href="<%= url_for :action => :show, :id => @flt.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @flt.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @flt.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="flt[number]" class="fieldLabel">Number</label>
            <input type="text" id="flt[number]" name="flt[number]" value="<%= @flt.number %>" <%= placeholder( "Number" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="flt[baseinfo]" class="fieldLabel">Baseinfo</label>
            <input type="text" id="flt[baseinfo]" name="flt[baseinfo]" value="<%= @flt.baseinfo %>" <%= placeholder( "Baseinfo" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="flt[segment]" class="fieldLabel">Segment</label>
            <input type="text" id="flt[segment]" name="flt[segment]" value="<%= @flt.segment %>" <%= placeholder( "Segment" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="flt[bunk]" class="fieldLabel">Bunk</label>
            <input type="text" id="flt[bunk]" name="flt[bunk]" value="<%= @flt.bunk %>" <%= placeholder( "Bunk" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
