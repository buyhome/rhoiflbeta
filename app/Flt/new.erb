<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @flt.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @flt.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="flt[number]" class="fieldLabel">Number</label>
            <input type="text" id="flt[number]" name="flt[number]" <%= placeholder("Number") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="flt[baseinfo]" class="fieldLabel">Baseinfo</label>
            <input type="text" id="flt[baseinfo]" name="flt[baseinfo]" <%= placeholder("Baseinfo") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="flt[segment]" class="fieldLabel">Segment</label>
            <input type="text" id="flt[segment]" name="flt[segment]" <%= placeholder("Segment") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="flt[bunk]" class="fieldLabel">Bunk</label>
            <input type="text" id="flt[bunk]" name="flt[bunk]" <%= placeholder("Bunk") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
