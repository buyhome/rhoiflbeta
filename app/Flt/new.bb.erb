<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Flt</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @flt.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Number: </td>
                <td class="itemValue"><input type="text" name="flt[number]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Baseinfo: </td>
                <td class="itemValue"><input type="text" name="flt[baseinfo]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Segment: </td>
                <td class="itemValue"><input type="text" name="flt[segment]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Bunk: </td>
                <td class="itemValue"><input type="text" name="flt[bunk]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
