<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @flt.object %>
    <h1>Edit <%= @flt.number%></h1>
    <%= link_to "Delete", :action => :delete, :id => @flt.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @flt.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Number: </td>
              <td class="itemValue"><input type="text" name="flt[number]" value="<%= @flt.number %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Baseinfo: </td>
              <td class="itemValue"><input type="text" name="flt[baseinfo]" value="<%= @flt.baseinfo %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Segment: </td>
              <td class="itemValue"><input type="text" name="flt[segment]" value="<%= @flt.segment %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Bunk: </td>
              <td class="itemValue"><input type="text" name="flt[bunk]" value="<%= @flt.bunk %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
