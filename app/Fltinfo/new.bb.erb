<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Fltinfo</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @fltinfo.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Fltno: </td>
                <td class="itemValue"><input type="text" name="fltinfo[fltno]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">S number: </td>
                <td class="itemValue"><input type="text" name="fltinfo[s_number]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Segments: </td>
                <td class="itemValue"><input type="text" name="fltinfo[segments]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
