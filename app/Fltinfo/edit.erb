<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @fltinfo.fltno %></h1>
    <a href="<%= url_for :action => :show, :id => @fltinfo.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @fltinfo.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @fltinfo.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="fltinfo[fltno]" class="fieldLabel">Fltno</label>
            <input type="text" id="fltinfo[fltno]" name="fltinfo[fltno]" value="<%= @fltinfo.fltno %>" <%= placeholder( "Fltno" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="fltinfo[s_number]" class="fieldLabel">S number</label>
            <input type="text" id="fltinfo[s_number]" name="fltinfo[s_number]" value="<%= @fltinfo.s_number %>" <%= placeholder( "S number" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="fltinfo[segments]" class="fieldLabel">Segments</label>
            <input type="text" id="fltinfo[segments]" name="fltinfo[segments]" value="<%= @fltinfo.segments %>" <%= placeholder( "Segments" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
