<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @fltinfo.object %>
    <h1>Edit <%= @fltinfo.fltno%></h1>
    <%= link_to "Delete", :action => :delete, :id => @fltinfo.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @fltinfo.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Fltno: </td>
              <td class="itemValue"><input type="text" name="fltinfo[fltno]" value="<%= @fltinfo.fltno %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">S number: </td>
              <td class="itemValue"><input type="text" name="fltinfo[s_number]" value="<%= @fltinfo.s_number %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Segments: </td>
              <td class="itemValue"><input type="text" name="fltinfo[segments]" value="<%= @fltinfo.segments %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
