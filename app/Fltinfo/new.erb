<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @fltinfo.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @fltinfo.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="fltinfo[fltno]" class="fieldLabel">Fltno</label>
            <input type="text" id="fltinfo[fltno]" name="fltinfo[fltno]" <%= placeholder("Fltno") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="fltinfo[s_number]" class="fieldLabel">S number</label>
            <input type="text" id="fltinfo[s_number]" name="fltinfo[s_number]" <%= placeholder("S number") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="fltinfo[segments]" class="fieldLabel">Segments</label>
            <input type="text" id="fltinfo[segments]" name="fltinfo[segments]" <%= placeholder("Segments") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
